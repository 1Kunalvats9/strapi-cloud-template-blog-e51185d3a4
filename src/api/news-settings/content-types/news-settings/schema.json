{
  "kind": "singleType",
  "collectionName": "news_settings",
  "info": {
    "singularName": "news-settings",
    "pluralName": "news-settings-collection",
    "displayName": "News Settings",
    "description": "Global settings for news fetching and moderation"
  },
  "options": {
    "draftAndPublish": false
  },
  "pluginOptions": {},
  "attributes": {
    "fetchIntervalMinutes": {
      "type": "integer",
      "required": true,
      "default": 30,
      "min": 1,
      "max": 1440
    },
    "moderationKeywords": {
      "type": "json",
      "default": ["spam", "fake", "clickbait", "scam", "adult", "explicit"]
    },
    "autoModerationEnabled": {
      "type": "boolean",
      "default": true
    },
    "maxArticlesPerFetch": {
      "type": "integer",
      "default": 20,
      "min": 1,
      "max": 100
    },
    "enableVoting": {
      "type": "boolean",
      "default": true
    },
    "cronJobEnabled": {
      "type": "boolean",
      "default": true
    },
    "newsApiCountry": {
      "type": "string",
      "default": "us"
    },
    "newsApiCategory": {
      "type": "enumeration",
      "enum": [
        "business",
        "entertainment", 
        "general",
        "health",
        "science",
        "sports",
        "technology"
      ],
      "default": "general"
    },
    "maxArticleLimit": {
      "type": "integer",
      "required": true,
      "default": 21,
      "min": 5,
      "max": 100,
      "description": "Maximum number of articles to keep in the system"
    },
    "maxArticleAgeHours": {
      "type": "integer",
      "required": true,
      "default": 24,
      "min": 1,
      "max": 168,
      "description": "Maximum age of articles in hours (1-168 hours = 1 hour to 1 week)"
    },
    "cleanupMode": {
      "type": "enumeration",
      "enum": [
        "count_only",
        "age_only", 
        "both_count_and_age"
      ],
      "default": "both_count_and_age",
      "description": "How to determine which articles to delete: by count only, age only, or both"
    },
    "cleanupFrequencyMinutes": {
      "type": "integer",
      "required": true,
      "default": 60,
      "min": 15,
      "max": 1440,
      "description": "How often to run cleanup (in minutes)"
    },
    "preservePinnedArticles": {
      "type": "boolean",
      "default": true,
      "description": "Never delete pinned articles during cleanup"
    },
    "preserveBreakingNews": {
      "type": "boolean",
      "default": true,
      "description": "Never delete breaking news during cleanup"
    },
    "lastCleanupRun": {
      "type": "datetime",
      "description": "Timestamp of last cleanup run"
    },
    "cleanupStats": {
      "type": "json",
      "default": {
        "totalDeleted": 0,
        "lastDeletedCount": 0,
        "lastCleanupDate": null
      },
      "description": "Statistics about cleanup operations"
    }
  }
}
