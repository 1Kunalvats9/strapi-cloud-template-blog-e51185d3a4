{
  "kind": "collectionType",
  "collectionName": "photo_galleries",
  "info": {
    "singularName": "photo-gallery",
    "pluralName": "photo-galleries",
    "displayName": "Photo Gallery"
  },
  "options": {
    "draftAndPublish": true
  },
  "pluginOptions": {},
  "attributes": {
    "Title": {
      "type": "string",
      "required": true
    },
    "Image": {
      "type": "media",
      "multiple": false,
      "allowedTypes": [
        "images"
      ],
      "required": true
    },
    "Author": {
      "type": "string",
      "required": true
    },
    "Location": {
      "type": "string",
      "required": true
    },
    "Likes": {
      "type": "integer",
      "default": 0
    },
    "Comments": {
      "type": "integer",
      "default": 0
    },
    "Views": {
      "type": "integer",
      "default": 0
    },
    "TimeAgo": {
      "type": "string"
    },
    "Category": {
      "type": "enumeration",
      "enum": [
        "Landscape",
        "Food",
        "Culture",
        "Nightlife",
        "Architecture",
        "People",
        "Nature",
        "Events",
        "Street",
        "Portrait",
        "Travel",
        "Other"
      ],
      "required": true
    },
    "IsActive": {
      "type": "boolean",
      "default": true
    },
    "Featured": {
      "type": "boolean",
      "default": false
    },
    "Description": {
      "type": "text"
    },
    "Tags": {
      "type": "json"
    },
    "CameraSettings": {
      "type": "json"
    },
    "LocationCoordinates": {
      "type": "json"
    },
    "LastUpdated": {
      "type": "datetime"
    },
    "overlay_text": {
      "type": "text"
    },
    "overlay_position": {
      "type": "enumeration",
      "enum": [
        "Top-Left",
        "Top-Right",
        "Bottom-Left",
        "Bottom-Right",
        "Center"
      ],
      "default": "Bottom-Right"
    },
    "overlay_text_color": {
      "type": "string",
      "default": "#FFFFFF"
    },
    "overlay_background_color": {
      "type": "string",
      "default": "rgba(0,0,0,0.6)"
    },
    "overlay_font_size": {
      "type": "decimal",
      "default": 1.2
    },
    "sponsor_url": {
      "type": "string"
    }
  }
}
