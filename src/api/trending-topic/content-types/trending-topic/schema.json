{
  "kind": "collectionType",
  "collectionName": "trending_topics",
  "info": {
    "singularName": "trending-topic",
    "pluralName": "trending-topics",
    "displayName": "Trending Topic"
  },
  "options": {
    "draftAndPublish": true
  },
  "pluginOptions": {},
  "attributes": {
    "Title": {
      "type": "string",
      "required": true
    },
    "Type": {
      "type": "enumeration",
      "enum": [
        "hashtag",
        "location",
        "event",
        "business",
        "topic"
      ],
      "required": true
    },
    "Posts": {
      "type": "integer",
      "default": 0
    },
    "Growth": {
      "type": "decimal",
      "default": 0
    },
    "Category": {
      "type": "enumeration",
      "enum": [
        "Tourism",
        "Nightlife",
        "Events",
        "Shopping",
        "Culture",
        "Food",
        "Business",
        "Entertainment"
      ],
      "required": true
    },
    "Icon": {
      "type": "string"
    },
    "Description": {
      "type": "text"
    },
    "URL": {
      "type": "string"
    },
    "IsActive": {
      "type": "boolean",
      "default": true
    },
    "Featured": {
      "type": "boolean",
      "default": false
    },
    "Rank": {
      "type": "integer",
      "default": 0
    },
    "LastUpdated": {
      "type": "datetime"
    },
    "hashtag": {
      "type": "string",
      "required": true,
      "description": "The hashtag or keyword for trending search"
    },
    "duration_hours": {
      "type": "integer",
      "default": 24,
      "required": true,
      "description": "How many hours this trend should be active"
    },
    "start_time": {
      "type": "datetime",
      "required": true,
      "description": "When this trending topic becomes active"
    }
  }
}
