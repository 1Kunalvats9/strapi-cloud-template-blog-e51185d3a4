{
  "kind": "collectionType",
  "collectionName": "radio_stations",
  "info": {
    "singularName": "radio-station",
    "pluralName": "radio-stations",
    "displayName": "Radio Station"
  },
  "options": {
    "draftAndPublish": true
  },
  "pluginOptions": {},
  "attributes": {
    "Name": {
      "type": "string",
      "required": true
    },
    "Frequency": {
      "type": "string",
      "required": true
    },
    "Genre": {
      "type": "string"
    },
    "Description": {
      "type": "blocks"
    },
    "StreamURL": {
      "type": "string",
      "required": true
    },
    "Logo": {
      "type": "media",
      "multiple": true,
      "allowedTypes": [
        "images"
      ]
    },
    "CoverImage": {
      "type": "media",
      "multiple": true,
      "allowedTypes": [
        "images",
        "files"
      ]
    },
    "IsLive": {
      "type": "boolean",
      "default": true
    },
    "Featured": {
      "type": "boolean",
      "default": false
    },
    "Verified": {
      "type": "boolean",
      "default": false
    },
    "Listeners": {
      "type": "integer",
      "default": 0
    },
    "CurrentTrack": {
      "type": "string"
    },
    "Website": {
      "type": "string"
    },
    "Facebook": {
      "type": "string"
    },
    "Instagram": {
      "type": "string"
    },
    "Twitter": {
      "type": "string"
    }
  }
}
