{
  "kind": "collectionType",
  "collectionName": "radio_stations",
  "info": {
    "singularName": "radio-station",
    "pluralName": "radio-stations",
    "displayName": "Radio Station"
  },
  "options": {
    "draftAndPublish": true
  },
  "pluginOptions": {},
  "attributes": {
    "Name": {
      "type": "string",
      "required": true
    },
    "Frequency": {
      "type": "string",
      "required": true
    },
    "Genre": {
      "type": "string"
    },
    "Description": {
      "type": "blocks"
    },
    "StreamURL": {
      "type": "string",
      "required": true
    },
    "Logo": {
      "type": "media",
      "multiple": true,
      "allowedTypes": [
        "images"
      ]
    },
    "CoverImage": {
      "type": "media",
      "multiple": true,
      "allowedTypes": [
        "images",
        "files"
      ]
    },
    "IsLive": {
      "type": "boolean",
      "default": true
    },
    "Featured": {
      "type": "boolean",
      "default": false
    },
    "Verified": {
      "type": "boolean",
      "default": false
    },
    "Listeners": {
      "type": "integer",
      "default": 0
    },
    "CurrentTrack": {
      "type": "string"
    },
    "DisplayOrder": {
      "type": "integer",
      "default": 999,
      "min": 1,
      "max": 999,
      "description": "Priority order for display (1 = highest priority, 999 = lowest priority)"
    },
    "Website": {
      "type": "string"
    },
    "Facebook": {
      "type": "string"
    },
    "Instagram": {
      "type": "string"
    },
    "Twitter": {
      "type": "string"
    },
    "IsSponsored": {
      "type": "boolean",
      "default": false,
      "description": "Sponsored station slot - appears at top of list with sponsored label"
    },
    "SponsoredLabel": {
      "type": "string",
      "description": "Custom label for sponsored station (e.g., 'Sponsored by Singha Beer')"
    },
    "SponsoredUntil": {
      "type": "date",
      "description": "Date until which the station sponsorship is valid"
    },
    "AudioPreRollAd": {
      "type": "media",
      "multiple": false,
      "allowedTypes": [
        "audios"
      ],
      "description": "Audio ad clip to play before radio stream starts"
    },
    "PreRollAdText": {
      "type": "string",
      "description": "Text to display during pre-roll ad (e.g., 'This music break is brought to you by The Rock Bar')"
    },
    "PreRollAdDuration": {
      "type": "integer",
      "default": 5,
      "min": 3,
      "max": 15,
      "description": "Duration of pre-roll ad in seconds"
    },
    "PreRollAdActive": {
      "type": "boolean",
      "default": false,
      "description": "Whether the pre-roll ad is currently active"
    }
  }
}
