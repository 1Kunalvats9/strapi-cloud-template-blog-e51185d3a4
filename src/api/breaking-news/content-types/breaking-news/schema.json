{
  "kind": "collectionType",
  "collectionName": "breaking_news_plural",
  "info": {
    "singularName": "breaking-news",
    "pluralName": "breaking-news-plural",
    "displayName": "Breaking News"
  },
  "options": {
    "draftAndPublish": true
  },
  "pluginOptions": {},
  "attributes": {
    "Title": {
      "type": "string",
      "required": true
    },
    "Summary": {
      "type": "text",
      "required": true
    },
    "Severity": {
      "type": "enumeration",
      "enum": [
        "low",
        "medium",
        "high",
        "critical"
      ]
    },
    "Category": {
      "type": "string",
      "required": true
    },
    "Source": {
      "type": "string",
      "required": true
    },
    "URL": {
      "type": "string",
      "required": true
    },
    "IsBreaking": {
      "type": "boolean",
      "default": false
    },
    "PublishedTimestamp": {
      "type": "datetime"
    },
    "isPinned": {
      "type": "boolean",
      "default": false
    },
    "voteScore": {
      "type": "integer",
      "default": 0
    },
    "upvotes": {
      "type": "integer",
      "default": 0
    },
    "downvotes": {
      "type": "integer",
      "default": 0
    },
    "userVotes": {
      "type": "json",
      "default": {}
    },
    "moderationStatus": {
      "type": "enumeration",
      "enum": [
        "approved",
        "pending",
        "rejected",
        "needs_review"
      ],
      "default": "approved"
    },
    "isHidden": {
      "type": "boolean",
      "default": false
    },
    "fetchedFromAPI": {
      "type": "boolean",
      "default": false
    },
    "apiSource": {
      "type": "string"
    },
    "originalAPIData": {
      "type": "json"
    },
    "sponsorName": {
      "type": "string"
    },
    "SponsoredPost": {
      "type": "boolean",
      "default": false
    },
    "FeaturedImage": {
      "type": "string"
    },
    "ImageAlt": {
      "type": "string"
    },
    "ImageCaption": {
      "type": "text"
    }
  }
}
