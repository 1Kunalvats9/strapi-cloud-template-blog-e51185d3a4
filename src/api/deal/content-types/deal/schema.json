{
  "kind": "collectionType",
  "collectionName": "deals",
  "info": {
    "singularName": "deal",
    "pluralName": "deals",
    "displayName": "Deal"
  },
  "options": {
    "draftAndPublish": true
  },
  "pluginOptions": {},
  "attributes": {
    "deal_title": {
      "type": "string",
      "required": true
    },
    "slug": {
      "type": "uid",
      "required": true
    },
    "description": {
      "type": "richtext"
    },
    "business": {
      "type": "relation",
      "relation": "manyToOne",
      "target": "api::business.business",
      "inversedBy": "deals"
    },
    "deal_category": {
      "type": "enumeration",
      "enum": [
        "Hotel",
        "Activity",
        "Food & Drink",
        "Spa",
        "Retail"
      ],
      "required": true
    },
    "image_gallery": {
      "type": "media",
      "multiple": true,
      "allowedTypes": [
        "images"
      ]
    },
    "deal_type": {
      "type": "enumeration",
      "enum": [
        "Standard",
        "Flash"
      ],
      "default": "Standard"
    },
    "original_price": {
      "type": "decimal",
      "required": true
    },
    "sale_price": {
      "type": "decimal",
      "required": true
    },
    "expiry_date_time": {
      "type": "datetime",
      "required": true
    },
    "the_fine_print": {
      "type": "richtext"
    },
    "requires_reservation": {
      "type": "boolean",
      "default": false
    },
    "quantity_total": {
      "type": "integer",
      "default": 0
    },
    "quantity_remaining": {
      "type": "integer",
      "default": 0
    },
    "is_featured_on_homepage": {
      "type": "boolean",
      "default": false
    },
    "is_in_marquee": {
      "type": "boolean",
      "default": false
    },
    "time_based_discounts": {
      "type": "component",
      "component": "deals.time-based-discount",
      "repeatable": true
    },
    "tiered_discounts": {
      "type": "component",
      "component": "deals.tiered-discount",
      "repeatable": true
    },
    "isActive": {
      "type": "boolean",
      "default": true
    },
    "featured": {
      "type": "boolean",
      "default": false
    },
    "views": {
      "type": "integer",
      "default": 0
    },
    "clicks": {
      "type": "integer",
      "default": 0
    },
    "conversions": {
      "type": "integer",
      "default": 0
    },
    "tags": {
      "type": "component",
      "component": "reusable.tags",
      "repeatable": true
    },
    "seo": {
      "type": "component",
      "component": "reusable.seo-metadata",
      "repeatable": true
    },
    "bookings": {
      "type": "relation",
      "relation": "oneToMany",
      "target": "api::booking.booking",
      "mappedBy": "deal"
    }
  }
}
